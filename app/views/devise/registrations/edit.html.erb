<div class="container">
  <div class="row justify-content-center align-items-center min-vh-100">
    <div class="col-6 border rounded p-5 bg-white">
      <h2 class="my-3">Edite seus dados</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :phone,
                      hint: "Leave it blank if you don't want to change it",
                      required: false,
                      input_html: { autocomplete: "new-phone" }%>
          <%= f.input :password,
                      hint: "Leave it blank if you don't want to change it",
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :current_password,
                      hint: "We need your current password to confirm your changes",
                      required: true,
                      input_html: { autocomplete: "current-password" } %>

          <%= f.input :photo, as: :file %>

          <% if @user.role == "artist" %>
            <%= link_to "Edit your address", edit_address_path(current_user.address), class: "btn btn-outline-dark my-3" %>
          <% end %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Confirm changes", class: "btn btn-dark mb-3" %>
        </div>
      <% end %>

      <h3 class="mt-4">Cancel my account</h3>


        <div>Unhappy?</div>

        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-dark my-3" %>


      <%= link_to :back do %>
        <i class="fa-solid fa-chevron-left"><span class = "h5">Back</span></i>
      <% end %>
    </div>
  </div>
</div>
