<div class="<%= "my-message" if current_user == message.user %>" id="message-<%= message.id %>">
  <div class="my-message-content">
    <% if message.user.photo.attached? %>
      <%= cl_image_tag message.user.photo.key, transformation: [{gravity: "face", height: 400, width: 400, crop: "thumb"}], class: "avatar" %>
    <% else %>
      <%= image_tag "https://cdn-icons-png.flaticon.com/512/149/149071.png", class: "avatar" %>
    <% end %>
    <small>
      <strong><%= message.user.first_name %></strong>
      <i><%= distance_of_time_in_words_to_now(message.created_at) %></i>
    </small>
    <p><%= message.content %></p>
  </div>
</div>
