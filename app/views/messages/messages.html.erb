<div class="container" data-controller="quotation-subscription" data-quotation-subscription-quotation-id-value="<%= @quotation.id %>">
  <div class="messages" data-quotation-subscription-target="messages">
      <% @quotation.messages.each do |message| %>
        <%= render "messages/message", message: message %>
      <% end %>
  </div>

  <%= simple_form_for [@quotation, @message], html: { data: { action: "turbo:submit-end->quotation-subscription#resetForm" }, class: "d-flex"} do |f| %>
    <%= f.input :content,
      label: false,
      placeholder: "Fale alguma coisa!",
      wrapper_html: {class: "flex-grow-1"}
    %>
    <%= f.submit "Send", class: "btn btn-primary mb-3" %>
  <% end %>
</div>
