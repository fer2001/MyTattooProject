<div class="container">
  <div class="card post">
    <div class="row g-0 h-100">
      <div class="col h-100">
          <%= cl_image_tag post.photo.key, class: "img-fluid rounded-start h-100"%>
      </div>
      <div class="col">
        <div class="card-body">
          <h5 class="card-title"><%= link_to post.user.full_name, post_user_profile_path(post.user), class: "text-decoration-none" %></h5>
          <p class="card-text">
            <%= post.content  %>
          </p>
          <% if policy(post).edit? %>
            <%= link_to 'Edit post', edit_post_path(post), class: 'btn btn-warning text-white' %>
          <% end %>

          <% if policy(post).destroy? %>
            <%= link_to 'Delete post', post_path(post), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this post?" }, class: 'btn btn-danger text-white' %>
          <% end %>
          <p class="card-text"><small class="text-muted">posted <%= distance_of_time_in_words_to_now(post.created_at) %> ago</small></p>
        </div>
      </div>
    </div>
  </div>
</div>
