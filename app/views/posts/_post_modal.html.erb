<div class="container">
  <div class="card post">
    <div class="row g-0 h-100">
      <div class="col h-100">
          <%= cl_image_tag post.photo.key, class: "img-fluid rounded-start h-100"%>
      </div>
      <div class="col">
        <div class="card-body">
          <div class="user-photo d-flex align-self-center">
            <% if post.user.photo.attached? %>
              <%= cl_image_tag post.user.photo.key, transformation: [{gravity: "face", height: 50, width: 50, crop: "thumb"}], class: "post-avatar" %>
            <% else %>
              <%= image_tag "https://cdn-icons-png.flaticon.com/512/149/149071.png", class: "post-avatar" %>
            <% end %>
            <h5 class="card-title"><%= link_to post.user.full_name, user_profile_path(post.user), class: "text-decoration-none" %></h5>

            <% if post.user == current_user %>
              <div class="dropdown">
                <button type="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fa-solid fa-ellipsis"></i></button>
                <ul class="dropdown-menu">
                  <li><%= link_to "Editar", edit_post_path(post), class: "dropdown-item" %></li>
                  <li><%= link_to 'Deletar', post_path(post), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this post?" }, class: "dropdown-item" %></li>
                  <li><hr class="dropdown-divider"></li>
                  <li><a class="dropdown-item" href="#">Separated link</a></li>
                </ul>
              </div>
            <% end %>
          </div>

          <p class="card-text">
            <%= post.content  %>
          </p>

          <div class="container">
            <div class="comments">
              <span class="mb-2 d-block"><small><em class="text-muted"><%= "nenhum comentÃ¡rio foi feito" if post.comments.empty? %></em></small></span>
              <% post.comments.each do |comment| %>
                <%= render "comments/comment", comment: comment %>
              <% end %>
            </div>

            <%= simple_form_for [ post, comment ], html: { data: { action: "turbo:submit-end->quotation-subscription#resetForm" }, class: "d-flex"} do |f| %>
              <%= f.input :content,
                label: false,
                placeholder: "Adicione um comentÃ¡rio",
                wrapper_html: {class: "flex-grow-1"}
              %>
              <%= f.submit "Send", class: "btn btn-primary mb-3" %>
            <% end %>
          </div>


          <p class="card-text"><small class="text-muted">posted <%= distance_of_time_in_words_to_now(post.created_at) %> ago</small></p>
        </div>
      </div>
    </div>
  </div>
</div>
