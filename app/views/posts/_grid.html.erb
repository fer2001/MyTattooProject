 <div class="d-flex">
    <% posts.each do |group| %>
      <div class="d-flex flex-column w-25 mx-2">
        <% group.each do |post| %>
          <%= link_to cl_image_tag(post.photo.key, class: 'img-fluid post-preview w-100 my-2'), post_path(post) %>
        <% end %>
      </div>
    <% end %>
  </div>
