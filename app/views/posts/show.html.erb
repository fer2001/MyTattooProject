<div class="container">
  <div class="card-post">
    <div class="d-flex h-100">
      <%= cl_image_tag @post.photo.key, class: "card-img"%>
      <div class="card-body overflow-auto">
        <%# CARD HEADER - FIXED TOP %>
        <div class="bg-fill top-0 position-sticky p-3">
          <div class="user-photo d-flex align-self-center">
            <% if @post.user.photo.attached? %>
              <%= cl_image_tag @post.user.photo.key, transformation: [{gravity: "face", height: 50, width: 50, crop: "thumb"}], class: "post-avatar" %>
            <% else %>
              <%= image_tag "https://cdn-icons-png.flaticon.com/512/149/149071.png", class: "post-avatar" %>
            <% end %>
            <h5 class="card-title"><%= link_to @post.user.full_name, user_profile_path(@post.user), class: "text-decoration-none" %></h5>
            <% if @post.user == current_user %>
              <div class="dropdown">
                <button type="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fa-solid fa-ellipsis"></i></button>
                <ul class="dropdown-menu">
                  <li><%= link_to "Editar", edit_post_path(@post), class: "dropdown-item" %></li>
                  <li><%= link_to 'Deletar', post_path(@post), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this post?" }, class: "dropdown-item" %></li>
                  <li><hr class="dropdown-divider"></li>
                  <li><a class="dropdown-item" href="#">Cancelar</a></li>
                </ul>
              </div>
            <% end %>
          </div>
          <p class="mt-2">
            Tags:
            <% @post.tags.each do |tag| %>
              #<%= link_to tag.name, tag_path(tag), class: "text-decoration-none" %>
            <% end %>
          </p>
          <p class="card-text"><%= @post.content %></p>
          <%# <LIKES> %>
          <div class="user-actions">
            <div class="d-flex justify-content-between">
              <div class="d-flex">
                <% if user_signed_in? %>
                  <% pre_like = @post.likes.find { |like| like.user_id == current_user.id} %>
                  <% if pre_like %>
                    <% like = current_user.likes.find_by(post_id: @post.id) %>
                    <%= link_to like_path(like), data: { turbo_method: :delete } do %>
                      <i class="fa-solid fa-heart-crack"></i>
                    <% end %>
                  <% else %>
                    <%= link_to post_likes_path(@post), data: { turbo_method: :post } do %>
                      <i class="fa-solid fa-heart"></i>
                    <% end %>
                  <% end %>
                <% end %>
                <p class="ms-2"><%= pluralize(@post.likes.count, 'Like') %></p>
              </div>
              <p class="card-text"><small class="text-muted">posted <%= distance_of_time_in_words_to_now(@post.created_at) %> ago</small></p>
            </div>
          </div>
          <%# </LIKES> %>
        </div>
        <%# CARD BODY - SCROLLABLE %>
        <div class="comments px-3">
            <% @post.comments.each do |comment| %>
              <%= render "comments/comment", comment: comment %>
            <% end %>
        </div>
        <%# CARD FOOTER - FIXED BOTTOM %>
        <div class="bottom-0 position-sticky bg-fill px-3 pt-3">
          <% if current_user %>
            <%= render "comments/comment_form", comment: @comment, post: @post %>
          <% else %>
            <p>Para comentar <%= link_to "Clique aqui ", new_user_session_path %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%= link_to 'Back', :root %>
</div>
