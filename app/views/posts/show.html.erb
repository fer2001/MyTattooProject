<div class="container">
  <div class="card post">
  <div class="row g-0 h-100">
    <div class="col h-100">
        <%= cl_image_tag @post.photo.key, class: "img-fluid rounded-start h-100"%>
        <% if user_signed_in? %>
          <% pre_like = @post.likes.find { |like| like.user_id == current_user.id} %>
          <% if pre_like %>
            <% like = current_user.likes.find_by(post_id: @post.id) %>
            <%= like.id %>
            <%= button_to 'Unlike', like_path(like), method: :delete %>
          <% else %>
            <%= button_to 'Like', post_likes_path(@post), method: :post %>
          <% end %>
          <%= @post.id %>
          <p><%= @post.likes.count %> <%= (@post.likes.count) == 1 ? 'Like' : 'Likes'%></p>
        <% else %>
          <p><%= @post.likes.count %> <%= (@post.likes.count) == 1 ? 'Like' : 'Likes'%></p>
        <% end %>
    </div>
    <div class="col">
      <div class="card-body">
        <h5 class="card-title">Card title</h5>
        <p class="card-text">
          <%= @post.content  %>
        </p>
        <% if policy(@post).edit? %>
          <%= link_to 'Edit post', edit_post_path(@post), class: 'btn btn-warning text-white' %>
        <% end %>

        <% if policy(@post).destroy? %>
          <%= link_to 'Delete post', post_path(@post), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this post?" }, class: 'btn btn-danger text-white' %>
        <% end %>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
      </div>
    </div>
  </div>
  <%= link_to 'Back', :back %>
</div>
