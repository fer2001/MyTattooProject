<div class="container profile-container">
    <%= link_to :back do %>
      <i class="fa-solid fa-arrow-left"></i>
    <% end %>
  <div class="d-flex justify-content-around">
    <div class="d-flex align-items-center">
      <% if @user.photo.attached? %>
        <%= cl_image_tag @user.photo.key, transformation: [{gravity: "face", height: 400, width: 400, crop: "thumb"}], class: "profile-pic" %>
      <% else %>
        <%= image_tag "https://cdn-icons-png.flaticon.com/512/149/149071.png", class: "profile-pic" %>
      <% end %>
      <div class="ms-4">
        <h1><%= @user.full_name %></h1>
        <p><%= @user.address.city if @user.role == "artist" %></p>
      </div>
    </div>
  </div>
  <hr class="mt-5 mb-4">
  <% unless @user == current_user %>
    <div class="d-flex justify-content-around">
      <%= link_to "Pedir orÃ§amento", new_artist_quotation_path(@user), class: 'btn btn-ghost' %>
    </div>
  <% end %>
  <% if user_signed_in? %>
    <div class="d-flex justify-content-center">
      <%= link_to "Criar postagem", new_post_path,  class: 'mx-3 btn btn-ghost' if current_user.role == "artist" && @user == current_user %> <br>
      <%= link_to "Editar perfil", edit_user_registration_path,  class: 'mx-3 btn btn-ghost' if @user == current_user%> <br>
    </div>
  <% end %>
</div>

<div class="justify-content-center">
  <div class="grid">
    <% @posts.sort { |post| post.created_at }.reverse.each do |post| %>
      <div class="post" data-bs-toggle="modal" data-bs-target="#modal<%= post.id %>">
        <%= cl_image_tag(post.photo.key) %>
      </div>
    <% end %>
  </div>
</div>
