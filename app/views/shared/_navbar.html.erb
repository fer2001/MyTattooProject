
<div class="navbar navbar-expand-lg navbar-dark fixed-top navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "MyTattoProject", root_path, class: "navbar-brand" %>
    <% if ["index"].include?(params[:action]) %>
      <div class="search-bar">
        <%= form_with url: posts_path, method: :get, class: "input-group" do %>
          <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Encontre um tatuador" %>
          <%= submit_tag "Explorar", class: "btn btn-outline-secondary" %>
        <% end %>
      </div>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Home", root_path, class:"nav-link active", aria_current: "page" %>
          </li>
          <li class="nav-item">
            <%= link_to "Mensagens", messages_index_path, class:"nav-link active" %>
          </li>
           <li class="nav-item">
            <%= link_to "Explorar",posts_path, class:"nav-link active" %>
          </li>
          <li class="nav-item">
            <%= link_to "Meus projetos", artist_quotations_path(current_user), class:"nav-link active" %>
          </li>
          <li class="nav-item dropdown">
            <% if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, transformation: [{gravity: "face", height: 400, width: 400, crop: "thumb"}], class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
              <%= image_tag "https://cdn-icons-png.flaticon.com/512/149/149071.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Criar post", new_post_path, class: "dropdown-item" if current_user.role == "artist" %>
              <%= link_to "Perfil", user_profile_path(current_user), class: "dropdown-item" %>
              <hr>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Explorar", posts_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sobre nÃ³s", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<script>
  window.addEventListener('scroll', () => {
    if (window.scrollY >= 56) {
      document.querySelector('.navbar').classList.add('navbar-scrolled')
    } else if (window.scrollY < 56) {
      document.querySelector('.navbar').classList.remove('navbar-scrolled')
    }
  })

  window.onload = function() {
    overlay();
  };

  function overlay() {
    let nav = document.getElementById("navbar-brand");
    if (window.innerWidth < 540) {
      nav.classList.add("hide-block");
    } else {
      nav.classList.remove("hide-block");
    }
  };
</script>
